const router = require('express').Router();
const ChargeType = require('../models/charge_type');

// all these routes point to /api/charge-types as specified in server.js and controllers/index.js

router.get('/', (req, res) => {
    res.status(200).send('Sending this from the /api/charge-types route root!');
});

router.get('/id/:id', (req, res) => {
    ChargeType.getChargeTypeById(req.params.id, (data) => {
        res.json(data);
    });
});

router.get('/all', (req, res) => {
    ChargeType.getAllChargeTypes((data) => {
        res.json(data);
    });
});

router.post('/', (req, res) => {
    const paramsObj = {
        charge_type: req.body.charge_type,
    };
    ChargeType.addNewChargeType(paramsObj, (data) => {
        if (data.insertId) {
            res.status(200).send('Charge type was successfully added!');
        } else {
            res.status(400).send('Could not add charge type... please check your request and try again!');
        }
    });
});

router.put('/', (req, res) => {
    const paramsObj = {
        charge_type_id: req.body.charge_type_id,
        charge_type: req.body.charge_type,
        active: req.body.active,
    };
    ChargeType.updateChargeTypeById(paramsObj, (data) => {
        if (data.changedRows > 0) {
            res.status(200).send('Charge type was successfully updated!');
        } else {
            res.status(400).send('Could not update charge type... please check your request and try again!');
        }
    });
});

router.delete('/:id', (req, res) => {
    ChargeType.deleteChargeTypeById(req.params.id, (data) => {
        if (data.affectedRows === 1) {
            res.status(200).send('Charge type was successfully deleted!');
        } else {
            res.status(400).send('Could not delete charge type... please check your request and try again!');
        }
    });
});

module.exports = router;
